{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "theatric",
  "version": "0.1.0",
  "identifier": "com.theatric.mediacenter",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Theatric",
        "resizable": true,
        "maximized": true,
        "additionalBrowserArgs": "--autoplay-policy=no-user-gesture-required"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
